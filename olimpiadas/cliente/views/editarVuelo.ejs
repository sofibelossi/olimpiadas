<body>
    <br>
    <div class="container text-center">
        <%if(vuelo){%>
            <div class="row">
                <h1>Modificar vuelo</h1>
                <form action="/editarVuelo" method="post">
                    <div style="margin: 10px;">
                        <input type="hidden" name="id" value="<%=vuelo.id%>">
                        <label for="">origen</label>
                        <input type="text" name="origen" value="<%=vuelo.id_origen%>">
                        <label for="">destino</label>
                        <input type="text" name="destino" value="<%=vuelo.id_destino%>">
                        <label for="">fecha salida</label>
                        <input type="date" name="fecha_salida" value="<%=vuelo.fecha_salida%>">
                        <label for="">fecha regreso</label>
                        <input type="date" name="fecha_regreso" value="<%=vuelo.fecha_regreso%>">
                        <select name="aerolinea" value="<%=vuelo.aerolinea%>">
                            <option value="AA">AA</option>
                        </select>
                        <label for="">precio</label>
                        <input type="text" name="precio" value="<%=vuelo.precio%>">
                        <select name="activo" value="<%=vuelo.activo%>">
                            <option value="0">0</option>
                            <option value="1">1</option>
                        </select>
                        <button type="submit">Guardar cambios</button>
                    </div>


                </form>
            </div>
            <%}%>
    </div>
</body>

</html>