  <a class="nav-link" href="/paquetes">Paquetes</a>
</nav>

<body>
    <br>
    <div class="container text-center">
        <%if(usuario){%>
            <div class="row">
                <h1>Modificar usuario</h1>
                <form action="/update" method="post">
                    <div style="margin: 10px;">
                        <input type="hidden" name="id" value="<%=usuario.id%>">
                        <label for="">nombre</label>
                        <input type="text" name="nombre" value="<%=usuario.nombre%>">
                        <label for="">apellido</label>
                        <input type="text" name="apellido" value="<%=usuario.apellido%>">
                        <label for="">clave</label>
                        <input type="text" name="clave" value="<%=usuario.clave%>">
                        <label for="">telefono</label>
                        <input type="text" name="telefono" value="<%=usuario.telefono%>">
                        <label for="">direccion</label>
                        <input type="text" name="direccion" value="<%=usuario.direccion%>">
                        <label for="">rol</label>
                        <select name="rol">
                            <option <%=usuario.id_rol==1 ? "selected" : '' %> value="1" >1</option>
                            <option <%=usuario.id_rol==2 ? "selected" : '' %> value="2">2</option>
                        </select>
                        <select name="zona">
                            <option value="ARG1">ARG1</option>
                        </select>
                        <button type="submit">guardar</button>
                    </div>


                </form>
            </div>
            <%}%>
    </div>
</body>

</html>