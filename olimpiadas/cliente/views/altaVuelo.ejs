<body>
    <br>
    <div class="container text-center">
        <div class="row">
            <h1>Vuelo nuevo</h1>
                <form action="/save" method="post">
                    <div style="margin: 10px;">
                        <label for="">origen</label>
                        <input type="text" name="origen">
                        <label for="">destino</label>
                        <input type="text" name="destino">
                        <label for="fechsal">Fecha de salida:</label>
                        <input type="text" id="fechsal" name="fecha_salida" placeholder="Ingresa la fecha de salida">
                    </div>
                    <div style="margin: 10px;">
                        <label for="fechreg">fecha regreso:</label>
                        <input type="text" id="fechreg" name="fecha_regreso" placeholder="Ingresa la fecha regreso">
                    </div>
                    <div style="margin: 10px;">
                        <label for="precio">Precio:</label>
                        <input type="text" id="precio" name="precio" placeholder="Ingresa el precio">
                    </div>
                    <div style="margin: 10px;">
                        <label for="aerolinea">Aerolinea:</label>
                        <input type="text" id="aerolinea" name="aerolinea" placeholder="Ingresa la aerolinea">
                    </div>
                    <select name="activo">
                        <option value="0">0</option>
                        <option value="1">1</option>
                    </select>
                    <button type="submit">Enviar </button>
                </form>
        </div>
    </div>
